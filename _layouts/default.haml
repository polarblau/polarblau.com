!!! 5
%html.no-js(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(content="IE=edge,chrome=1" http-equiv="X-UA-Compatible")
    %title Polarblau

    %meta(content="Full stack software solutions for the open web" name="description")
    %meta(content="Polarblau" name="author")
    %meta(content="width=device-width,initial-scale=1,maximum-scale=1,user-scalable=no" name="viewport")

    %script(src="http://use.typekit.com/dzs0feh.js")
    :javascript
      try { Typekit.load(); } catch(e) {};

    %script(src="javascripts/lib/modernizr.js")
    :javascript
      Modernizr.load([{
        test: Modernizr.canvas,
        yep : [
          'javascripts/lib/underscore.js',
          'javascripts/lib/jquery.js',
          'javascripts/lib/fabric.js',
          'javascripts/background.js'
        ]
      }]);

    %link(href="/stylesheets/screen.css" rel="stylesheet")

  %body(class="{{ page.body_class }}")
    #container
      %header#header
        %h1
          %img(src="images/content/header/logo.png" alt="Polarblau" width="124" height="62")

      #main(role="main")
        {{ content }}
      %footer#footer
        %a(rel="license" href="http://creativecommons.org/licenses/by-nc/3.0/")
          %img(alt="Creative Commons License" src="/images/layout/footer/cc.png" width="66" height="20")
        Copy to learn.
